{
    "manifest_version": 2,
    "name": "QuickCapture",
    "version": "1.0",
    "description": "Capture and save professional contact details quickly.",
    "permissions": [
        "activeTab",
        "cookies",
        "*://*.quickcapture.fr/*",
        "localhost"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/quickCapture16.png",
            "48": "images/quickCapture48.png",
            "128": "images/quickCapture128.png"
        }
    },
    "icons": {
        "16": "images/quickCapture16.png",
        "48": "images/quickCapture48.png",
        "128": "images/quickCapture128.png"
    }
}
